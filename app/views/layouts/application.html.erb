<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= csrf_meta_tag %>
    <%= render 'layouts/stylesheets' %>
    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag "http://maps.google.com/maps/api/js?sensor=false&language=pl" %>
  </head>
  <body>
    <div class="container">
      <%= render 'layouts/header' %>
      <% if signed_in? %>
      	<%= render 'layouts/menu' %>      
      <% end %>
      <section class="round">
        <% flash.each do |key, value| %>
          <%= content_tag(:div, value, :class => "flash #{key}") %>
        <% end %> 
        <% unless @title.blank? %>
        <h1><%= @title %></h1>
        <%end %>
        <%= yield %>
      </section>
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>

