<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= stylesheet_link_tag    'application', :media => 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag "http://maps.google.com/maps/api/js?sensor=false&language=en" %>
    <script src="http://code.jquery.com/ui/1.9.2/jquery-ui.js"></script>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <div class="container">
      <%= render 'layouts/header' %>
      <% if signed_in? %>
      	<%= render 'layouts/menu' %>
      <% end %>
      <section class="round">
        <% flash.each do |key, value| %>
          <%= content_tag(:div, value, :class => "flash #{key}") %>
        <% end %> 
        <% unless @title.blank? %>
        <h1><%= @title %></h1>
        <%end %>
        <%= yield %>
      </section>
    </div>
    <%= debug(params) if Rails.env.development? %>
  </body>
</html>

