<%= form_for(@place) do |f| %>

<div class="small" id="map"></div>
<!-- Map params -->
<param id="longitude" value="<%= @place.point.x %>"/>
<param id="latitude" value="<%= @place.point.y %>"/>
<param id="zoom" value="14" />
<param id="addListener" />
<param id="disableDefaultUI" />
<param id="draggable" />

  <p>This is your private place. <%= f.submit "Make public",
  															:confirm => "You sure? This is irreversible operation.",
  															:title => "Make #{@place.name} public" %> </p>  


  <%= render 'fields', :f => f %>
  <div class="actions">
    <%= f.submit "Save" %>
  </div>
<% end %>

