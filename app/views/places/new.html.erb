<%= form_for(@place) do |f| %>

  <div class="small" id="map"></div>
  <!-- Map params -->
<param id="longitude" value="<%= @point.x %>"/>
<param id="latitude" value="<%= @point.y %>"/>
<param id="zoom" value="14" />
<param id="draggable" />

  <div class="content">
  <%= render 'fields', :f => f %>
  </div>
  <div class="actions clear">
    <%= f.submit "Add" %>
  </div>
<% end %>

