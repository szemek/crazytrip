<% form_tag search_path, :method => 'get' do %>
	<div class="field">
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
	</div>
	<div class="field">
		<%= check_box_tag :users, 1, params[:users] %><%= label_tag :users %>
		<%= check_box_tag :trips, 1, params[:trips] %><%= label_tag :trips %>
		<%= check_box_tag :places, 1, params[:places] %><%= label_tag :places %>
	</div>
<% end %>

<%= will_paginate %>
<ul class="list">
  <%= render @search %>
</ul>
<%= will_paginate %>


