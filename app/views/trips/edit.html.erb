<div>
	<h2>Edit Trip</h2>
	<%= form_for(:trip, :url => {:action => 'update', :id => @trip.id}) do |f| %>
		<% if @trip.errors.any? %>
			<h3>Form is invalid</h3>
			<ul><% for message in @trip.errors.full_messages %>
				<li><%= message %></li>
			<% end %></ul>
		<% end %>
		<table>
			<tr>
				<th>Name</th>
				<td><%= f.text_field(:name) %></td>
			</tr>
			<tr>
				<th>Description</th>
				<td><%= f.text_field(:description) %></td>
			</tr>
			<tr>
				<th>Owner</th>
				<td><%= f.text_field(:user_id) %></td>
			</tr>
		</table>
	<%= submit_tag("Update Trip") %>
	<% end %>
</div>
