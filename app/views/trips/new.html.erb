<h1>Trips#new</h1>
<p>Find me in app/views/trips/new.html.erb</p>



<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %>

<div class="trip new">
  <h2>Create Trip</h2>
  <%= form_for(@trip, :url => {:action => 'create'}) do |f| %>
    <table summary="Trip form fields">
       <tr>
        <th>Owner</th>
        <td><%= f.text_field(:user_id) %></td>
      </tr>
      <tr>
        <th>Name</th>
        <td><%= f.text_field(:name) %></td>
      </tr>
      <tr>
        <th>Description</th>
        <td><%= f.text_field(:description) %></td>
      </tr>
    </table>

    <div class="form-buttons">
      <%= submit_tag("Create Trip") %>
    </div>

  <% end %>
</div>
